<Window x:Class="FFmpegSimpleGUI.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFmpegSimpleGUI"
        mc:Ignorable="d"
        Title="追加オプション" ResizeMode="NoResize" Loaded="Window_Loaded"
        SizeToContent="WidthAndHeight">
    <Grid Height="180" Width="640">
        <TextBox x:Name="textOption" HorizontalAlignment="Left" Height="115" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="620"/>
        <Button x:Name="buttonCancel" Content="キャンセル" HorizontalAlignment="Left" Margin="458,142,0,0" VerticalAlignment="Top" Width="75" Click="buttonCancel_Click"/>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="555,142,0,0" VerticalAlignment="Top" Width="75" Click="buttonOK_Click"/>
    </Grid>
</Window>

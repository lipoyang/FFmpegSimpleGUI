<Window x:Class="FFmpegSimpleGUI.OptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFmpegSimpleGUI"
        mc:Ignorable="d"
        Title="追加オプション" Height="200" Width="640" ResizeMode="NoResize">
    <Grid Margin="0,0,0,-8" Loaded="Grid_Loaded">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textOption" HorizontalAlignment="Left" Height="115" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="614" TabIndex="0"/>
        <Button x:Name="buttonOK" Content="OK" HorizontalAlignment="Left" Margin="549,141,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.48,1.667" Click="buttonOK_Click" TabIndex="2"/>
        <Button x:Name="buttonCancel" Content="キャンセル" HorizontalAlignment="Left" Margin="458,142,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="0.48,1.667" Click="buttonCancel_Click" TabIndex="1"/>

    </Grid>
</Window>
